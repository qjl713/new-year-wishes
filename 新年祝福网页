# 初始化 Git 仓库
git init

# 添加 .gitignore
echo ".vscode/" > .gitignore

# 添加所有文件
git add .

# 提交更改
git commit -m "Initial commit: New Year wishes website"

# 设置主分支为 main
git branch -M main

# 添加远程仓库
git remote add origin https://github.com/QJL713/new-year-wishes.git

# 推送到 GitHub
git push -u origin main
